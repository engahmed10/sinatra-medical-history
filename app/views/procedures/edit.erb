<h1>form to edit an instance of procedure </h1>

<form class="SorL-form" method="POST" action="/members/<%= @member.id %>/procedures/<%=@procedure.id%>">

            <input type ="hidden" id="hidden" name="_method" value="patch">
            <input type="text" name="name" placeholder="name"  value=<%=@procedure.name%>>
            <input type="text" name="desc" placeholder="desc" value=<%=@procedure.desc%> >
            <input type="text" name="proce_doctor" placeholder="proce_doctor" value=<%=@procedure.proce_doctor%> >
            <input type="text" name="hospital" placeholder="hospital" value=<%=@procedure.hospital%> >
            <input type="text" name="date_porc" placeholder="date_porc" value=<%=@procedure.date_porc%>>
            <input type="text" name="age_at_proc" placeholder="age at visit" value=<%=@procedure.age_at_proc%>>

        <br>

        <h3>Choose from Existing Diseases :</h3>
        <% @diseases.each do |dis| %>
        <input type ="checkbox"  name="procedure[disease_id]"  id="<%= dis.id %>" value="<%= dis.id %>">
        <%=dis.name%><br>
        <%=dis.desc%><br>
        </input>
        <%end%>

        <h3> Or craete new disease :</h3>
            <input type="text" name="disease[name]">
            <input type="text" name="disease[desc]">
            <input type="submit" value="update">


</form>